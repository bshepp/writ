# Writ -- Environment Configuration
#
# Copy to .env and fill in your values:
#   cp env.example .env

# ---------- Neo4j ----------
# docker-compose up defaults: bolt://localhost:7687, neo4j / localdevpassword
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=localdevpassword

# ---------- API keys ----------
OPENAI_API_KEY=
LLAMA_CLOUD_API_KEY=

# ---------- Directories ----------
RESOURCES_DIR=resources
DATA_DIR=data
LOGS_DIR=logs

# ---------- Web / API ----------
API_HOST=localhost
API_PORT=8080
DEBUG=true

# ---------- CORS ----------
ALLOWED_ORIGIN=*

# ---------- NLP ----------
NLP_MODE=auto
